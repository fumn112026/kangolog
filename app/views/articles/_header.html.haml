%header.header
  %h1.header__logo kangolog 
  
  .header__search
    = form_with(url: search_articles_path, local: true, method: :get) do |f|
      = f.text_field :keyword, placeholder: '記事を検索する', class: "search_window"
      = f.submit '検索'

  %ul.header__menu
    - if user_signed_in?
      %li.menu_lists
        = current_user.nickname
      %li.menu_lists
        = link_to 'マイページ', user_path(current_user.id), class: "link"
      %li.menu_lists
        = link_to '新規投稿', new_article_path, class: "link"
      %li.menu_lists
        = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "link"
    - else
      %li.menu_lists
        = link_to 'ログイン', new_user_session_path, class: "link"
      %li.menu_lists
        = link_to '新規登録', new_user_registration_path, class: "link"