.new-posts__wrapper
  .new-posts__wrapper__form
    = form_with model: @article, local: true do |f|
      = f.text_field :title, placeholder: "タイトル", class: "new-posts__wrapper__form__title form"
      = f.text_field :tag_ids, class: "new-posts__wrapper__form__tag form", placeholder: "5つまでタグを入力(複数つけるには、' , 'で区切ってください)"
      %br/
      = f.fields_for :images do |i|
        = i.file_field :src, class: "new-posts__wrapper__form__image"
        %br/
      = f.text_area :content, placeholder: "テキストを入力", class: "new-posts__wrapper__form__content form"
      %br/
      = f.submit 'kangologに投稿', class: "new-posts__wrapper__form__submit form"

